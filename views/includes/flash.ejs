<% if (success && success.length) { %>
    <div class="alert alert-success-custom alert-dismissible fade show" role="alert">
        <div class="alert-content">
            <i class="fas fa-check-circle alert-icon"></i>
            <div class="alert-text"><%= success %></div>
            <button type="button" class="btn-close-custom" data-bs-dismiss="alert" aria-label="Close">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
<% } %>

<% if (error && error.length) { %>
    <div class="alert alert-danger-custom alert-dismissible fade show" role="alert">
        <div class="alert-content">
            <i class="fas fa-exclamation-circle alert-icon"></i>
            <div class="alert-text"><%= error %></div>
            <button type="button" class="btn-close-custom" data-bs-dismiss="alert" aria-label="Close">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
<% } %>
<style>
      /* Alert Base Styles */
    .alert {
        border: none;
        border-radius: 12px;
        padding: 0;
        margin: 1rem 0;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        animation: slideInDown 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        transition: all 0.3s ease;
    }

    /* Alert Content Layout */
    .alert-content {
        display: flex;
        align-items: center;
        padding: 1.2rem 1.5rem;
        position: relative;
    }

    /* Alert Icons */
    .alert-icon {
        font-size: 1.5rem;
        margin-right: 1rem;
        flex-shrink: 0;
    }

    /* Alert Text */
    .alert-text {
        flex-grow: 1;
        font-size: 1rem;
        line-height: 1.5;
        padding-right: 1.5rem;
    }

    /* Success Alert */
    .alert-success-custom {
        background: linear-gradient(135deg, rgba(40, 167, 69, 0.15), rgba(40, 167, 69, 0.1));
        border-left: 4px solid #28a745;
    }

    .alert-success-custom .alert-icon {
        color: #28a745;
    }

    /* Danger Alert */
    .alert-danger-custom {
        background: linear-gradient(135deg, rgba(220, 53, 69, 0.15), rgba(220, 53, 69, 0.1));
        border-left: 4px solid #dc3545;
    }

    .alert-danger-custom .alert-icon {
        color: #dc3545;
    }

    /* Close Button */
    .btn-close-custom {
        background: none;
        border: none;
        padding: 0.5rem;
        cursor: pointer;
        color: rgba(0, 0, 0, 0.3);
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        width: 30px;
        height: 30px;
    }

    .btn-close-custom:hover {
        background: rgba(0, 0, 0, 0.05);
        color: rgba(0, 0, 0, 0.6);
    }

    .btn-close-custom i {
        font-size: 0.9rem;
    }

    /* Animations */
    @keyframes slideInDown {
        from {
            transform: translateY(-20px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    /* Responsive Adjustments */
    @media (max-width: 768px) {
        .alert-content {
            padding: 1rem;
        }
        
        .alert-icon {
            font-size: 1.3rem;
            margin-right: 0.8rem;
        }
        
        .alert-text {
            font-size: 0.95rem;
            padding-right: 1rem;
        }
    } 
</style>
