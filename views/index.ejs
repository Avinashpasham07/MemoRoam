<% layout('layouts/boilerplate') %>
<style>
    /* Modern Color Scheme */
    :root {
        --primary: #ff5733;
        --secondary: #3f37c9;
        --accent: #ff5733;
        --light: #f8f9fa;
        --dark: #212529;
        --gray: #6c757d;
        --light-gray: #e9ecef;
    }

    /* Base Styles */
    .container {
        max-width: 1400px;
        padding: 0 20px;
    }

    /* Animated Page Title */
    .page-title {
        font-size: 2.5rem;
        text-align: center;
        margin: 2rem 0 3rem;
        color: var(--dark);
        position: relative;
        font-weight: 700;
        letter-spacing: -0.5px;
        animation: fadeInDown 0.8s ease;
    }

    .page-title:after {
        content: '';
        position: absolute;
        bottom: -15px;
        left: 16%;
        transform: translateX(-50%);
        width: 135px;
        height: 2px;
        background: linear-gradient(90deg, var(--accent), var(--primary));
        border-radius: 2px;
        animation: scaleIn 0.8s ease;
    }

    /* Listings Grid with Animation */
    .listings-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 2.5rem;
        padding: 1rem 0;
    }

    /* Enhanced Card Design */
    .card {
        border: none;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        background: white;
        position: relative;
        opacity: 0;
        animation: fadeInUp 0.6s ease forwards;
        animation-delay: calc(var(--order) * 0.1s);
    }

    .card:nth-child(1) { --order: 1; }
    .card:nth-child(2) { --order: 2; }
    .card:nth-child(3) { --order: 3; }
    .card:nth-child(4) { --order: 4; }
    /* Add more if needed */

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.12);
    }

    .card-img-container {
        overflow: hidden;
        height: 220px;
        position: relative;
        
    }

    .card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.8s ease;
    }

    .card:hover img {
        transform: scale(1.1);
    }

    .card-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: var(--accent);
        color: white;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        z-index: 1;
        animation: pulse 2s infinite;
    }

    .card-body {
        padding: 1.8rem;
    }

    .card-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: var(--dark);
        margin-bottom: 0.8rem;
        line-height: 1.3;
    }

    .card-text {
        color: var(--gray);
        margin-bottom: 1.2rem;
        font-size: 0.95rem;
        line-height: 1.5;
    }

    .price {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--primary);
        margin: 0.8rem 0;
        display: flex;
        align-items: center;
    }

    .price small {
        font-size: 0.9rem;
        font-weight: 500;
        color: var(--gray);
        margin-left: 5px;
    }

    .tax-info {
        font-size: 0.85rem;
        color: var(--gray);
        margin-left: 5px;
        opacity: 0.8;
        transition: all 0.3s ease;
    }

    .location {
        display: flex;
        align-items: center;
        color: var(--gray);
        margin: 0.8rem 0;
        font-size: 0.95rem;
    }

    .location i {
        margin-right: 0.6rem;
        color: var(--accent);
        font-size: 1.1rem;
    }

    .btn-container {
        margin-top: 1.5rem;
        display: flex;
    }

    .btn-view {
        background: linear-gradient(135deg, var(--primary), var(--secondary));
        border: none;
        border-radius: 30px;
        padding: 0.7rem 1.8rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
        flex-grow: 1;
        text-align: center;
    }

    .btn-view:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(67, 97, 238, 0.4);
        background: linear-gradient(135deg, var(--secondary), var(--primary));
        color: white;
    }

    /* Enhanced Tax Toggle */
    .tax-toggle-container {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 2rem;
        animation: fadeIn 0.8s ease;
    }
    
    .tax-toggle {
        background: white;
        border-radius: 12px;
        padding: 0.8rem 1.5rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all 0.3s ease;
    }

    .tax-toggle:hover {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .tax-toggle span {
        font-weight: 500;
        color: var(--dark);
    }

    .form-switch .form-check-input {
        width: 3.5em;
        height: 1.8em;
        cursor: pointer;
        background-color: var(--light-gray);
        border-color: var(--light-gray);
    }

    .form-switch .form-check-input:checked {
        background-color: var(--accent);
        border-color: var(--accent);
    }

    /* Search Results Header */
    .search-results-header {
        background: white;
        padding: 1.5rem 2rem;
        border-radius: 12px;
        margin-bottom: 2.5rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        animation: fadeIn 0.6s ease;
    }

    .search-results-header h3 {
        font-weight: 700;
        color: var(--dark);
        margin-bottom: 0.5rem;
    }

    .search-results-header h3 span {
        color: var(--accent);
    }

    .alert-info {
        background-color: rgba(67, 97, 238, 0.1);
        border-color: rgba(67, 97, 238, 0.2);
        color: var(--primary);
        border-radius: 10px;
        padding: 1rem;
    }

    /* Animations */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @keyframes scaleIn {
        from { transform: translateX(-50%) scaleX(0); }
        to { transform: translateX(-50%) scaleX(1); }
    }

    @keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }

    /* Responsive Adjustments */
    @media (max-width: 1200px) {
        .listings-container {
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 2rem;
        }
    }

    @media (max-width: 992px) {
        .page-title {
            font-size: 2.2rem;
            margin: 1.5rem 0 2.5rem;
        }
    }

    @media (max-width: 768px) {
        .listings-container {
            grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
            gap: 1.5rem;
        }
        
        .tax-toggle-container {
            justify-content: center;
        }

        .card-body {
            padding: 1.5rem;
        }

        .page-title {
            font-size: 2rem;
        }
    }

    @media (max-width: 576px) {
        .listings-container {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .page-title {
            font-size: 1.8rem;
            margin: 1rem 0 2rem;
        }

        .tax-toggle {
            padding: 0.7rem 1.2rem;
        }

        .search-results-header {
            padding: 1.2rem;
        }
    }
</style>

<div class="container">
    <!-- Animated Page Title -->
    <h2 class="page-title">Explore Amazing Stays</h2>
  
    <!-- Enhanced Tax Toggle -->
    <div class="tax-toggle-container">
        <div class="tax-toggle">
            <span>Show Tax Details</span>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
            </div>
        </div>
    </div>

    <!-- Search Results Header -->
    <% if (locals.searchMode) { %>
        <div class="search-results-header">
            <h3>Search Results for "<span><%= locals.searchQuery %></span>"</h3>
            <% if (allist.length === 0) { %>
                <div class="alert alert-info">
                    No listings found matching your search. Try different keywords.
                </div>
            <% } %>
        </div>
    <% } %>

    <!-- Animated Listings Grid -->
    <div class="listings-container">
        <% allist.forEach(listing => { %>
            <div class="card">
                <div class="card-img-container">
                    <img src="<%= listing.image && listing.image.url ? listing.image.url : 'https://images.unsplash.com/photo-1518780664697-55e3ad937233?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80' %>" 
                         alt="<%= listing.title %>">
                </div>
                <div class="card-body">
                    <h3 class="card-title"><%= listing.title %></h3>
                    <div class="price">
                        â‚¹<%= listing.price ? listing.price.toLocaleString("en-IN") : "Price not available" %>
                        <small>/night</small>
                        <span class="tax-info">+18% GST</span>
                    </div>
                    <div class="location">
                        <i class="fas fa-map-marker-alt"></i>
                        <%= listing.location %>
                    </div>
                    <p class="card-text">
                        <%= listing.description ? listing.description.substring(0, 100) + '...' : 'Comfortable stay with all modern amenities.' %>
                    </p>
                    <div class="btn-container">
                        <a href="/listing/<%= listing._id %>" class="btn btn-view">
                            View Details <i class="fas fa-arrow-right ml-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<script>
    // Enhanced tax toggle functionality with animation
    const taxSwitch = document.getElementById('switchCheckDefault');
    taxSwitch.addEventListener("change", function() {
        const taxInfoElements = document.querySelectorAll('.tax-info');
        
        if (this.checked) {
            taxInfoElements.forEach(el => {
                el.style.opacity = '1';
                el.style.maxHeight = '50px';
                el.style.marginLeft = '8px';
            });
        } else {
            taxInfoElements.forEach(el => {
                el.style.opacity = '0';
                el.style.maxHeight = '0';
                el.style.marginLeft = '0';
            });
        }
    });
    
    // Initialize tax info as hidden by default with smooth transition
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.tax-info').forEach(el => {
            el.style.transition = 'all 0.3s ease';
            el.style.opacity = '0';
            el.style.maxHeight = '0';
            el.style.overflow = 'hidden';
            el.style.display = 'inline-block';
        });
    });
</script>