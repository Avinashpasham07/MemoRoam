<% layout('layouts/boilerplate') %>
<div class="new-listing-container">
  <div class="new-listing-header">
    <h2 class="new-title">
      <i class="fas fa-plus-circle me-2"></i>Create New Listing
    </h2>
    <p ></p>
    <hr>
    <br>
  </div>

  <div class="new-listing-card">
    <form method="post" action="/listing" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="row">
        <!-- Left Column -->
        <div class="col-md-8">
          <div class="form-section">
            <h4 class="section-title">
              <i class="fas fa-info-circle me-2"></i>Basic Information
            </h4>
            
            <div class="mb-4">
              <label for="title" class="form-label">Listing Title</label>
              <input type="text" name="listing[title]" 
                     placeholder="Beautiful beachfront villa" 
                     class="form-control form-control-lg" required>
              <div class="invalid-feedback">Please provide a title for your listing.</div>
            </div>

            <div class="mb-4">
              <label for="description" class="form-label">Description</label>
              <textarea name="listing[description]" class="form-control" 
                        rows="5" required></textarea>
              <div class="invalid-feedback">Please describe your property.</div>
            </div>
          </div>

          <div class="form-section">
            <h4 class="section-title">
              <i class="fas fa-map-marker-alt me-2"></i>Location Details
            </h4>
            
            <div class="row">
              <div class="col-md-6 mb-4">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]" 
                       placeholder="Country" 
                       class="form-control" required>
              </div>
              
              <div class="col-md-6 mb-4">
                <label for="location" class="form-label">City/Area</label>
                <input type="text" name="listing[location]" 
                       placeholder="City or specific area" 
                       class="form-control" required>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column -->
        <div class="col-md-4">
          <div class="form-section">
            <h4 class="section-title">
              <i class="fas fa-image me-2"></i>Photos
            </h4>
            
            <div class="mb-4">
              <label for="img" class="form-label">Upload Photo</label>
              <div class="file-upload">
                <input type="file" name="listing[image]" class="form-control" required>
                <small class="text-muted">Recommended size: 1200x800 pixels</small>
              </div>
            </div>
          </div>

          <div class="form-section">
            <h4 class="section-title">
              <i class="fas fa-tag me-2"></i>Pricing
            </h4>
            
            <div class="mb-4 price-input">
              <label for="price" class="form-label">Price per night</label>
              <div class="input-group">
                <span class="input-group-text">â‚¹</span>
                <input type="number" name="listing[price]" 
                       placeholder="2000" 
                       class="form-control" required>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn btn-primary btn-lg">
          <i class="fas fa-save me-2"></i>Create Listing
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Keep the same CSS styles as before -->
 <style>

  .edit-listing-container {
    padding: 2rem 0;
    background-color: #f8f9fa;
    min-height: 100vh;
  }
  
  .edit-listing-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .edit-title {
    font-weight: 700;
    color: #2c3e50;
    margin-bottom: 0.5rem;
  }
  
  .edit-subtitle {
    color: #7f8c8d;
    font-size: 1.1rem;
  }
  
  .edit-listing-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    padding: 2.5rem;
    margin: 0 auto;
    max-width: 1200px;
  }
  
  .form-section {
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid #eee;
  }
  
  .form-section:last-child {
    border-bottom: none;
  }
  
  .section-title {
    font-size: 1.25rem;
    color: #2c3e50;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
  }
  
  .form-control-lg {
    padding: 0.75rem 1rem;
    font-size: 1.05rem;
  }
  
  .current-image {
    margin-bottom: 1.5rem;
  }
  
  .image-preview {
    position: relative;
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid #eee;
  }
  
  .image-preview img {
    width: 100%;
    height: auto;
    display: block;
  }
  
  .image-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0,0,0,0.7);
    color: white;
    padding: 0.5rem;
    text-align: center;
    font-size: 0.9rem;
  }
  
  .file-upload {
    border: 2px dashed #ddd;
    padding: 1.5rem;
    border-radius: 8px;
    text-align: center;
    transition: all 0.3s ease;
  }
  
  .file-upload:hover {
    border-color: #4A6FA5;
    background-color: #f8faff;
  }
  
  .price-input .input-group-text {
    background-color: #f8f9fa;
    font-weight: 600;
  }
  
  .form-actions {
    display: flex;
    justify-content: flex-end;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid #eee;
  }
  
  @media (max-width: 768px) {
    .edit-listing-card {
      padding: 1.5rem;
    }
    
    .form-actions {
      flex-direction: column;
      gap: 1rem;
    }
    
    .form-actions .btn {
      width: 100%;
    }
  }
</style>
<script>
(function() {
    'use strict';
    window.addEventListener('load', function() {
        var form = document.querySelector('.needs-validation');
        form.addEventListener('submit', function(event) {
            if (form.checkValidity() === false) {
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated');
        }, false);
    }, false);
})();
</script>